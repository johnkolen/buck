<div class=row>
  <div class="col-sm-4 col-sm-offset-4">
    <div class=row>
      <h1>Log In</h1>
    </div>

    <%= form_tag sessions_create_path do %>
      <div class=row>
	<%= text_field_tag(:email,
			   params[:email],
			   :class=>"form-control",
			   :placeholder=>"Email Address") %>
      </div>
      <div class=row>
	<%= password_field_tag(:password,
			       params[:password],
			       :class=>"form-control",
			       :placeholder=>"Password") %>
      </div>
      <div class=row>
	<%= submit_tag 'Log In', :class=>"form-control btn btn-md btn-info" %>
      </div>
    <% end %>
  </div>
</div>
