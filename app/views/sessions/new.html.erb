<div class=row>
  <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class=row>
      <%= logo :large %>
    </div>
    <%= form_tag sessions_create_path do %>
      <div class=row>
	<%= text_field_tag(:email,
			   params[:email],
			   :class=>"form-control",
			   :placeholder=>"Email Address") %>
      </div>
      <div class=row>
	<%= password_field_tag(:password,
			       params[:password],
			       :class=>"form-control",
			       :placeholder=>"Password") %>
      </div>
      <% if flash[:notice] %>
	<div class=row>
	  <div class="well error-message">
	    <%= flash[:notice]%>
	  </div>
	</div>
      <% end %>
      <div class=row>
	<%= submit_tag 'Log In', :class=>"form-control btn btn-md btn-info" %>
      </div>
    <% end %>
    <div class=row>
      <%= forgot_password_button %>
    </div>
    <div class=row>
      <%= signup_button %>
    </div>
  </div>
</div>
