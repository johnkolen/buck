<div class=show>
  <div class=row>
    <div class="col-sm-3">
      <div><%=show_avatar @user%></div>
    </div>
    <div  class="col-sm-8">
      <%= show_fields @user do %>
        <%= user_fields @user %>
	<%= show_field @user, :credentials, @user.credential_type_list%>
	<%= show_field @user, :paypal_signup, @user.paypal_active?%>
	<% if @user.paypal %>
  	  <%= show_field @user, :paypal_declined, @user.paypal.declined?%>
	  <%= show_field @user, :paypal_token_expires, @user.paypal.access_token_expires_at || "missing expiration" %>
	<% end %>
      <% end %>
      <%= show_navigation @user %>
    </div>
  </div>
</div>

