<h1>Transfers</h1>

<%= paged_search_header admin_transfers_path, @transfers, :first_name, :last_name %>

<table class="table" >
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Recipient</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.created_at %></td>
        <td><%= obj_link transfer.user %></td>
        <td><%= obj_link transfer.recipient %></td>
        <td><%= number_to_currency(transfer.amount) %></td>
	<td><%= sed_buttons transfer%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= new_button Admin::Transfer %>
