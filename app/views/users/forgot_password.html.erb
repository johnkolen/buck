<div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 dashboard">
  <div class=row>
    <%= logo :large %>
  </div>
  <div class=row>
    <h1>Welcome to Bet A Buck</h1>
    <% if notice %>
      <div class="well"><%= notice %></div>
    <% end %>
    <p>
      Sorry that you have forgotten your password. Please provide your
      email address below and we will send you a temporary password to
      log into your account.
    </p>
    <%= form_tag temp_password_users_path do %>
      <%= text_field_tag(:email,
			 params[:email],
			 :class=>"form-control",
			 :placeholder=>"Email Address") %>
      <%= submit_tag "Temporary Password", :class=>"btn btn-info" %>
    <% end %>
  </div>
  <%= return_to_login_button %>
</div>
